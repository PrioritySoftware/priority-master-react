{
    "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "build",
      "rootDir": "src",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "preserveConstEnums": true,
      "allowJs": true,
      "sourceMap": true,
      "noImplicitReturns": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "watch": true
    },
    "filesGlob": [
      "typings/index.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "include": [
        "index.ts",
        "src",
        "src/assets"
      ],
    "exclude": [
      "android",
      "ios",
      "build",
      "node_modules"
    ],
    "compileOnSave": true
  }